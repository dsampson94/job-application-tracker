{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "imports/**/*.ts",
    "imports/**/*.tsx",
    "client/**/*.ts",
    "client/**/*.tsx",
    "server/**/*.ts"
  ]
}
